<div class="form place-form <% if (place == null) { %>new-form<% } %>" <% if (place != null) { %>id="<%= place.identifier.replace(':','-') %>"<% } %>>
	<% if (place != null) { %>
		<div class="remove">
			<a href="javascript:void(0)" class="initial">Remove this place</a>
			<div class="confirm">Really remove?
				<a href="javascript:void(0)" class="confirm-remove">yes</a> /
				<a href="javascript:void(0)" class="dont-remove">no</a>
			</div>
		</div>
	<% } %>
	<input type="hidden" id="_id" <% if (place != null) { %>value="<%= place._id %>"<% } %> />
	<div class="form-item">
		<div class="label">Place Name <span class="eg">(e.g. "Notman House")</span></div>
		<input type="text" class="notblank" id="displayName" <% if (place != null) { %>value="<%= place.displayName %>"<% } %> />
	</div>
	<div class="form-item">
		<div class="label">Identifier <span class="eg">(e.g. "notman")</span></div>
		<input type="text" class="notblank nospaces" id="identifier" <% if (place != null) { %>value="<%= place.identifier %>"<% } %> />
	</div>
	<div class="form-item">
		<div class="label">API Root</div>
		<span class="label-url"><input type="text" id="apiUrl" class="long url notblank" <% if (place != null) { %>value="<%= place.apiUrl %>"<% } else { %>value="http://"<% } %> />
	</div>
	<div class="form-item">
		<div class="label">Social Feeds</div>
		<span class="label-url">twitter.com/</span><input type="text" id="twitter" class="nospaces" <% if (place != null) { %>value="<%= place.twitter %>"<% } %> />
	</div>
	<div class="form-item">
		<div class="label">Forced Background Color</div>
		<div class="eg">If nothing is entered here, the default gradient will be used.</div>
		<input type="text" id="forcedBackground" class="medium" <% if (place != null && place.hasOwnProperty('forcedBackground')) { %>value="<%= place.forcedBackground %>"<% } %> />
	</div>
	<div class="save">Save</div>
	<div class="saved">Saved!</div>
	<div class="add">Add</div>
	<div class="added">Added!</div>
	<div class="alerts"></div>
</div>
